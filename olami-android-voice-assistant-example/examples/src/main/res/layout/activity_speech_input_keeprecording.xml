<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ai.olami.android.example.VoiceAssistantActivity"
    android:orientation="horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/backgroud">

        <ImageView
            android:id="@+id/olamiLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="100dp" />

        <TextView
            android:id="@+id/sttResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="400dp"
            android:layout_marginTop="150dp"
            android:textColor="#9f9f9f"
            android:textSize="55sp" />

        <TextView
            android:id="@+id/ttsValue"
            android:layout_width="1000dp"
            android:layout_height="400dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="350dp"
            android:text="@string/HelloIAmOlami"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/whatCanOLAMIDo"
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="200dp"
            android:text="@string/WhatCanOLAMIDo"
            android:textColor="#9f9f9f"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
